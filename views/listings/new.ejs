<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">

            <h3>Create a New Listing</h3>
            <form method="post" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-lebel">Title</label>
                    <input name="listing[title]"
                     placeholder="Add a catchy title" 
                    type="text" class="form-control"
                        required>
                        <div class="valid-feedback">Title Looks good!</div>
                </div>
                

                <div class="mb-3">
                    <label for="description" class="form-lebel">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please Enter a  sort description. </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-lebel">Image Link</label>
                    <input name="listing[image]" placeholder="enter image URL/Links" type="text" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lebel">Price</label>
                        <input name="listing[price]"
                         placeholder="1200" 
                         
                          class="form-control" 
                          required>
                          <div class="invalid-feedback">Please Enter a valid Price  </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lebel">Country</label>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please Enter a  Country name </div>

                    </div>
                </div>


                <div class="mb-3">
                    <label for="location" class="form-lebel">Location</label>
                    <input name="listing[location]" placeholder="jaipur,Rajastan" type="text" class="form-control"
                        required>
                        <div class="invalid-feedback">Please Enter a location name </div>
                </div>

                <button class="btn btn-dark add-btn mt-3">Add</button>

            </form>
        </div>
    </div>