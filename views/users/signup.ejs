<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">signup on wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>


                <div class="mb-3">
                    <label for="username" class="form-lebel">Username</label>
                    <input name="username" id="username" placeholder="enter your username" type="text"
                        class="form-control" required>
                    <div class="valid-feedback"> Looks good!</div>
                </div>




                <div class="mb-3">
                    <label for="email" class="form-lebel">Email</label>
                    <input name="email" id="email" placeholder="enter your email" type="email"
                        class="form-control" required>
                    <div class="valid-feedback"> Looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-lebel">Password</label>
                    <input name="password" id="password" placeholder="enter your password" type="password"
                        class="form-control" required>
                    <div class="valid-feedback"> Looks good!</div>
                </div>
                <button   class="btn btn-success">signup</button>
            </div>
            </form>
        </div>
    </div>